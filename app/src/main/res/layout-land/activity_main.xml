<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!--    Copyright 2019 by Roger van Wyk, Project #1

         Android Basic Nanodegree course - by Google's Udacity

                 Learnership grant from AAL & Google

  *Note* This activity.main.xml is for landscape screen orientation  -->

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.android.dontcook.MainActivity">

        <!-- Business header and logo -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="80dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/aboutdc_image_view"
        android:src="@drawable/aboutdc"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

        <!-- Business quality products declaration -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:text="@string/quality_meals"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        tools:ignore="RelativeOverlap" />

    <!-- Business' physical address -->

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="@string/address"
            android:textColor="@android:color/black"
            android:textSize="19sp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp" />

    <!-- Button opens business' about section -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/about_us"
        android:textColor="@android:color/black"
        android:textSize="42sp"
        android:layout_alignParentEnd="true"
        tools:ignore="RelativeOverlap" />

        <!-- Button opens a map to direct user to the business -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/visit_us"
        android:textColor="@android:color/black"
        android:textSize="43sp"
        android:layout_alignParentStart="true" />

    <!-- Business' hours of operations -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="215dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/ops_hrs"
        android:textColor="@android:color/black"
        android:textSize="31sp"
        android:layout_marginStart="215dp"
        android:layout_marginEnd="10dp" />

    </RelativeLayout>

</ScrollView>
